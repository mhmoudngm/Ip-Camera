@using Microsoft.Extensions.Localization
@using DashBoardT.resource.Employee
@inject IStringLocalizer<SharedResource> SharedLocalizer

@{
    ViewBag.title = "Employee";
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}

@if (Culture == "ar-EG")
{
    <h3 style="text-align:right">
        <a asp-controller="Employee" asp-action="Index" asp-route-culture="en-US"> @SharedLocalizer["English"]  </a>

    </h3>

}

@if (Culture == "en-US")
{
    <h3 style="text-align:right">
        <a asp-controller="Employee" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"] </a>
    </h3>
}

<h2>@SharedLocalizer["Welcome to Employee Department"]</h2>

<a class="btn btn-primary" asp-controller="Employee" asp-action="create">@SharedLocalizer["Add Employee"]</a>


<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Welcome To Employee</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th class="text-center">@SharedLocalizer["Employee Id"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee name"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee address"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee notes"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee hiredate"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee salary"]</th>
                                    <th class="text-center">@SharedLocalizer["Employee department"]</th>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Cv</th>

                                    <th class="text-center">@SharedLocalizer["Edit"]</th>
                                    <th class="text-center">@SharedLocalizer["Delete"]</th>
                                    <th class="text-center">@SharedLocalizer["Details"]</th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in ViewBag.Employeedata)
                                {

                                <tr>
                                    <td> @item.id</td>
                                    <td> @item.name</td>
                                    <td>@item.address</td>
                                    <td> @item.notes</td>
                                    <td>@item.hiredate</td>
                                    <td>@item.salary</td>
                                    <td>@item.departmentid</td>
                                    <td><img src="~/files/photos/@item.photoname" width="30" height="30" /></td>
                                    <td>
                                        <a href="~/files/docs/@item.cvname">Cv</a>
                                    </td>
                                    <td> <a asp-controller="Employee" asp-action="update" class="btn btn-success" asp-route-id="@item.id">@SharedLocalizer["Edit"]</a></td>
                                    <td> <a class="btn btn-danger" asp-controller="Employee" asp-action="delete" asp-route-did="@item.id">@SharedLocalizer["Delete"]</a></td>
                                    <td> <a class="btn btn-primary" asp-controller="Employee" asp-action="details" asp-route-did="@item.id">@SharedLocalizer["Details"]</a></td>
                                </tr>


                                }


                            </tbody>

                        </table>
                        @section section{
                            <script>
                                $(function () {
                                    $('.js-basic-example').DataTable({
                                        responsive: true,
                                        paging: true,
                                        pageLength: 5,
                                        bSort: true,
                                        bFilter: true,
                                        //bLengthChange: false,
                                        //bInfo: false,
                                        lengthMenu: [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

                                    });
                                });

                            </script>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


